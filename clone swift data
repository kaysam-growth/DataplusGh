    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-app.js";
        import { getAuth, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, query, onSnapshot, doc, updateDoc, deleteDoc, serverTimestamp, getDoc, setDoc } from "https://www.gstatic.com/firebasejs/10.13.1/firebase-firestore.js";

        const ADMIN_PIN = "0202148015@Gh";
        const MOMO_ACCOUNT = "0554222103";
        const MOMO_NAME = "SAMUEL OMARI";
        const MOMO_NETWORK = "MTN";
        const MOMO_REF = "KAYSAM GROWTH";

        const firebaseConfig = {
            apiKey: "AIzaSyBVTQqx3fpkpUeCRO5B4N9Hb8dDxJGDIsg",
            authDomain: "swiftdata-32d80.firebaseapp.com",
            projectId: "swiftdata-32d80",
            storageBucket: "swiftdata-32d80.firebasestorage.app",
            messagingSenderId: "112123396026",
            appId: "1:112123396026:web:8673fe7a2e5b77e2156783",
            measurementId: "G-GPS00TXFLD"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);
        const appId = 'swiftdata-main-app'; // Stable ID

        let state = {
            user: null, view: 'home', isAdmin: false, adminTab: 'orders',
            selectedNetwork: 'MTN', selectedBundle: null, paymentMethod: 'paystack',
            recipientPhone: '', recipientPhoneConfirm: '',
            orders: [], products: [], 
            settings: { paystackPublicKey: '' },
            announcement: { text: '', active: false },
            isLoaded: false, trackingPhone: '', trackedOrders: []
        };

        const router = {
            navigate: (view) => {
                state.view = view;
                render();
                window.scrollTo(0, 0);
            }
        };
        window.router = router;

        async function init() {
            document.getElementById('year').innerText = new Date().getFullYear();
            
            onAuthStateChanged(auth, async (user) => {
                state.user = user;
                if (user) {
                    // Load Config
                    const settingsDoc = await getDoc(doc(db, 'artifacts', appId, 'public', 'data', 'config', 'settings_doc'));
                    if (settingsDoc.exists()) state.settings = settingsDoc.data();
                    
                    // Announcement Listener
                    onSnapshot(doc(db, 'artifacts', appId, 'public', 'data', 'config', 'announcement'), (d) => {
                        if (d.exists()) state.announcement = d.data();
                        render();
                    });

                    // Inventory Listener
                    onSnapshot(collection(db, 'artifacts', appId, 'public', 'data', 'products'), (snap) => {
                        state.products = snap.docs.map(d => ({ id: d.id, ...d.data() }));
                        state.isLoaded = true;
                        render();
                    });
                }
            });
            await signInAnonymously(auth);
        }

        function render() {
            const container = document.getElementById('main-content');
            const announceBar = document.getElementById('announcement-area');
            
            // Render Announcement
            if (state.announcement?.active && state.announcement?.text) {
                announceBar.innerHTML = `
                    <div class="bg-blue-600 text-white py-3 px-6 text-center text-[11px] font-black uppercase tracking-[0.2em] fade-in flex items-center justify-center gap-3">
                        <i data-lucide="bell" class="w-4 h-4 animate-bounce"></i>
                        <span>${state.announcement.text}</span>
                    </div>
                `;
            } else {
                announceBar.innerHTML = '';
            }

            if (!state.isLoaded && state.view !== 'login') return;

            switch(state.view) {
                case 'home': container.innerHTML = renderHome(); break;
                case 'checkout': container.innerHTML = renderCheckout(); break;
                case 'track': container.innerHTML = renderTracking(); break;
                case 'login': container.innerHTML = renderLogin(); break;
                case 'admin': container.innerHTML = renderAdmin(); break;
            }
            if (window.lucide) window.lucide.createIcons();
        }

        function renderHome() {
            const bundles = state.products.filter(p => p.network === state.selectedNetwork);
            let bundlesHtml = bundles.map(b => `
                <div onclick="selectBundle('${b.id}')" class="group cursor-pointer p-6 rounded-[2rem] border-2 transition-all flex flex-col justify-between bg-white ${state.selectedBundle?.id === b.id ? 'border-blue-600 ring-8 ring-blue-50 shadow-xl' : 'border-slate-100 hover:border-blue-200'}">
                    <div class="flex justify-between items-start mb-4">
                        <div class="w-10 h-10 bg-slate-50 rounded-xl flex items-center justify-center group-hover:bg-blue-50 transition-colors">
                            <i data-lucide="database" class="w-5 h-5 text-slate-400 group-hover:text-blue-600"></i>
                        </div>
                        <div class="text-xs font-black text-blue-600 bg-blue-50 px-3 py-1 rounded-full uppercase tracking-widest">${b.type || 'Standard'}</div>
                    </div>
                    <div>
                        <div class="text-3xl font-extrabold text-slate-900 tracking-tight">${b.size}</div>
                        <div class="text-xl font-extrabold text-blue-600 mt-1">GHS ${parseFloat(b.price).toFixed(2)}</div>
                    </div>
                </div>
            `).join('');

            return `
                <div class="max-w-4xl mx-auto px-6 py-12 fade-in">
                    <div class="text-center mb-16">
                        <h1 class="text-5xl font-extrabold text-slate-900 tracking-tight mb-4 leading-tight">Fast. Affordable. <span class="text-blue-600">Automated.</span></h1>
                        <p class="text-slate-500 font-medium text-lg">Top-up your data in seconds with Ghana's premier automated portal.</p>
                    </div>

                    <div class="flex flex-wrap justify-center gap-4 mb-12">
                        ${['MTN', 'Telecel', 'AT'].map(net => `
                            <button onclick="selectNetwork('${net}')" class="px-10 py-5 rounded-2xl border-2 font-extrabold transition-all ${state.selectedNetwork === net ? 'border-blue-600 bg-blue-600 text-white shadow-xl shadow-blue-200' : 'border-slate-100 bg-white text-slate-400 hover:border-slate-300'}">${net}</button>
                        `).join('')}
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">${bundlesHtml || '<p class="col-span-full text-center py-12 text-slate-400 font-bold uppercase tracking-widest">No bundles available</p>'}</div>

                    ${state.selectedBundle ? `
                    <div class="bg-white p-10 rounded-[3rem] border border-slate-100 shadow-2xl card-shadow mb-12">
                        <h2 class="text-2xl font-extrabold mb-8 flex items-center gap-3"><i data-lucide="smartphone" class="text-blue-600"></i> Recipient Details</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div class="space-y-2">
                                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Phone Number</label>
                                <input type="tel" oninput="updatePhone(this.value, 'recipientPhone')" value="${state.recipientPhone}" placeholder="05XXXXXXXX" class="w-full p-6 bg-slate-50 rounded-2xl outline-none focus:ring-4 focus:ring-blue-100 focus:bg-white font-extrabold text-2xl transition-all">
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Confirm Number</label>
                                <input type="tel" oninput="updatePhone(this.value, 'recipientPhoneConfirm')" value="${state.recipientPhoneConfirm}" placeholder="05XXXXXXXX" class="w-full p-6 bg-slate-50 rounded-2xl outline-none focus:ring-4 focus:ring-blue-100 focus:bg-white font-extrabold text-2xl transition-all">
                            </div>
                        </div>
                    </div>

                    <div class="bg-slate-900 p-10 rounded-[3rem] flex flex-col md:flex-row justify-between items-center gap-8 shadow-2xl">
                        <div>
                            <div class="text-slate-500 font-black text-[10px] uppercase tracking-widest mb-1">Total Due (incl. fee)</div>
                            <div class="text-5xl font-extrabold text-white">GHS ${(state.selectedBundle.price * 1.02).toFixed(2)}</div>
                        </div>
                        <button id="chk-btn" onclick="router.navigate('checkout')" ${state.recipientPhone.length < 10 || state.recipientPhone !== state.recipientPhoneConfirm ? 'disabled' : ''} class="w-full md:w-auto px-12 py-6 rounded-2xl font-extrabold text-xl bg-blue-600 text-white hover:bg-blue-500 btn-glow transition-all disabled:opacity-20">Secure Checkout</button>
                    </div>` : ''}
                </div>`;
        }

        window.updatePhone = (val, key) => {
            state[key] = val.replace(/\D/g, '').substring(0, 10);
            const btn = document.getElementById('chk-btn');
            if (btn) {
                const valid = state.recipientPhone.length === 10 && state.recipientPhone === state.recipientPhoneConfirm;
                btn.disabled = !valid;
            }
        };

        function renderCheckout() {
            const fee = state.paymentMethod === 'paystack' ? 0.02 : 0.01;
            const total = (parseFloat(state.selectedBundle.price) * (1 + fee)).toFixed(2);

            return `
                <div class="max-w-xl mx-auto px-6 py-12 fade-in">
                    <button onclick="router.navigate('home')" class="mb-8 font-black text-[10px] uppercase tracking-widest text-slate-400 hover:text-blue-600 transition-colors flex items-center gap-2">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i> Back
                    </button>
                    
                    <div class="bg-white rounded-[3rem] shadow-2xl p-10 border border-slate-100">
                        <h2 class="text-3xl font-extrabold mb-10 tracking-tight text-center">Complete Order</h2>
                        
                        <div class="bg-slate-50 p-6 rounded-3xl mb-10 space-y-4">
                            <div class="flex justify-between items-center"><span class="text-slate-400 font-bold text-xs uppercase tracking-widest">Network</span><span class="font-extrabold">${state.selectedNetwork}</span></div>
                            <div class="flex justify-between items-center"><span class="text-slate-400 font-bold text-xs uppercase tracking-widest">Bundle</span><span class="font-extrabold">${state.selectedBundle.size}</span></div>
                            <div class="flex justify-between items-center"><span class="text-slate-400 font-bold text-xs uppercase tracking-widest">Recipient</span><span class="font-extrabold text-blue-600">${state.recipientPhone}</span></div>
                        </div>

                        <div class="mb-10">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4 block px-2 text-center">Select Payment Method</label>
                            <div class="grid grid-cols-2 gap-4">
                                <button onclick="setPaymentMethod('paystack')" class="p-6 rounded-[2rem] border-2 transition-all flex flex-col items-center gap-3 ${state.paymentMethod==='paystack'?'border-blue-600 bg-blue-50 text-blue-700 shadow-lg':'border-slate-100 text-slate-400'}">
                                    <i data-lucide="credit-card" class="w-8 h-8"></i><span class="text-[11px] font-black uppercase">Automated</span>
                                </button>
                                <button onclick="setPaymentMethod('momo')" class="p-6 rounded-[2rem] border-2 transition-all flex flex-col items-center gap-3 ${state.paymentMethod==='momo'?'border-blue-600 bg-blue-50 text-blue-700 shadow-lg':'border-slate-100 text-slate-400'}">
                                    <i data-lucide="smartphone" class="w-8 h-8"></i><span class="text-[11px] font-black uppercase">Manual Transfer</span>
                                </button>
                            </div>
                        </div>

                        <div class="bg-blue-600 p-8 rounded-[2rem] text-white text-center mb-10 shadow-xl shadow-blue-100">
                            <span class="text-xs font-bold opacity-70 uppercase tracking-widest">Payable Total</span>
                            <div class="text-5xl font-extrabold mt-1 tracking-tight">GHS ${total}</div>
                        </div>

                        ${state.paymentMethod === 'paystack' ? `
                            <form onsubmit="handlePaystack(event)" class="space-y-6">
                                <input type="email" id="cEmail" required placeholder="Email for receipt" class="w-full p-6 bg-slate-50 rounded-2xl font-extrabold text-lg outline-none focus:bg-white focus:ring-4 focus:ring-blue-100 transition-all">
                                <button type="submit" class="w-full py-6 rounded-2xl bg-slate-900 text-white font-extrabold text-xl hover:bg-black btn-glow transition-all">PAY NOW</button>
                            </form>
                        ` : `
                            <div class="p-8 bg-amber-50 rounded-[2rem] border border-amber-100">
                                <div class="space-y-4 mb-8">
                                    <div class="flex justify-between items-center text-sm"><span class="text-amber-700 font-bold">Number:</span><span class="font-black text-xl">${MOMO_ACCOUNT}</span></div>
                                    <div class="flex justify-between items-center text-sm"><span class="text-amber-700 font-bold">Name:</span><span class="font-black">${MOMO_NAME}</span></div>
                                    <div class="flex justify-between items-center text-sm"><span class="text-amber-700 font-bold">Ref:</span><span class="font-black text-blue-600">${MOMO_REF}</span></div>
                                </div>
                                <div class="space-y-4">
                                    <input id="mSender" placeholder="Your MoMo Name" class="w-full p-5 rounded-xl border-none outline-none font-bold text-sm">
                                    <input id="mTrans" placeholder="Transaction ID (from SMS)" class="w-full p-5 rounded-xl border-none outline-none font-bold text-sm">
                                    <button onclick="handleManualMomo()" class="w-full py-5 bg-amber-600 text-white rounded-2xl font-black shadow-lg">I HAVE PAID</button>
                                </div>
                            </div>
                        `}
                    </div>
                </div>`;
        }

        window.handlePaystack = (e) => {
            e.preventDefault();
            const email = document.getElementById('cEmail').value;
            const total = (parseFloat(state.selectedBundle.price) * 1.02).toFixed(2);
            
            if (!state.settings?.paystackPublicKey) return alert("System Error: Merchant API keys not configured.");
            
            const paystack = new PaystackPop();
            paystack.newTransaction({
                key: state.settings.paystackPublicKey.trim(),
                email: email,
                amount: Math.round(total * 100),
                currency: "GHS",
                onSuccess: (res) => {
                    saveOrder({ method: 'paystack', paystackRef: res.reference, price: total, status: 'pending' });
                },
                onCancel: () => alert("Payment cancelled.")
            });
        };

        window.handleManualMomo = async () => {
            const name = document.getElementById('mSender').value;
            const tid = document.getElementById('mTrans').value;
            if (!name || !tid) return alert("Required: MoMo Name and Transaction ID.");
            const total = (parseFloat(state.selectedBundle.price) * 1.01).toFixed(2);
            await saveOrder({ method: 'momo', senderName: name, transId: tid, price: total, status: 'pending' });
        };

        async function saveOrder(data) {
            await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'orders'), {
                ...data,
                network: state.selectedNetwork,
                bundleSize: state.selectedBundle.size,
                recipientPhone: state.recipientPhone,
                createdAt: serverTimestamp()
            });

            document.getElementById('success-num').innerText = state.recipientPhone;
            const inst = document.getElementById('success-instruction');
            
            if (data.method === 'momo') {
                inst.innerHTML = `<p class="text-amber-600 font-bold text-xs uppercase mb-1">Under Review</p><p class="text-slate-500 text-xs font-medium leading-relaxed">Admin will verify your transfer and release the bundle within 5-15 mins.</p>`;
            } else {
                inst.innerHTML = `<p class="text-blue-600 font-bold text-xs uppercase mb-1">Processing</p><p class="text-slate-900 font-black text-2xl tracking-tighter">5-30 Mins Delivery</p>`;
            }

            state.selectedBundle = null;
            state.recipientPhone = '';
            document.getElementById('success-modal').style.display = 'flex';
        }

        window.selectNetwork = (n) => { state.selectedNetwork = n; render(); };
        window.selectBundle = (id) => { state.selectedBundle = state.products.find(p => p.id === id); render(); };
        window.setPaymentMethod = (m) => { state.paymentMethod = m; render(); };
        window.closeSuccessModal = () => { document.getElementById('success-modal').style.display = 'none'; router.navigate('home'); };

        function renderTracking() {
            return `
                <div class="max-w-2xl mx-auto px-6 py-16 fade-in">
                    <div class="text-center mb-12">
                        <h1 class="text-4xl font-extrabold mb-4 tracking-tight">Track Your Bundle</h1>
                        <p class="text-slate-500 font-medium italic">Enter your phone number to see delivery status.</p>
                    </div>
                    <div class="flex gap-4 mb-16">
                        <input type="tel" id="trackInput" placeholder="05XXXXXXXX" class="flex-grow p-6 bg-white rounded-3xl border border-slate-100 shadow-xl outline-none focus:ring-4 focus:ring-blue-100 font-extrabold text-2xl transition-all">
                        <button onclick="handleTrackSearch()" class="px-10 bg-slate-900 text-white rounded-3xl font-extrabold hover:bg-black transition-all shadow-xl">FIND</button>
                    </div>
                    <div id="results" class="space-y-4">
                        ${state.trackedOrders.length ? state.trackedOrders.map(o => `
                            <div class="bg-white p-8 rounded-[2rem] border border-slate-100 shadow-sm flex flex-col md:flex-row justify-between items-center gap-6">
                                <div>
                                    <div class="text-[10px] font-black text-slate-300 uppercase tracking-widest mb-1">${o.createdAt ? new Date(o.createdAt?.toDate()).toLocaleString() : 'Just now'}</div>
                                    <div class="text-2xl font-extrabold">${o.network} ${o.bundleSize}</div>
                                    <div class="text-sm font-bold text-blue-600">${o.recipientPhone}</div>
                                </div>
                                <div class="px-8 py-3 rounded-full font-black text-[10px] uppercase tracking-[0.2em] ${o.status==='delivered'?'bg-green-100 text-green-700':'bg-amber-100 text-amber-700'}">${o.status}</div>
                            </div>
                        `).join('') : '<p class="text-center py-20 text-slate-300 font-bold uppercase tracking-widest text-sm">No recent orders found</p>'}
                    </div>
                </div>`;
        }

        window.handleTrackSearch = () => {
            const phone = document.getElementById('trackInput').value;
            if (!phone) return;
            onSnapshot(collection(db, 'artifacts', appId, 'public', 'data', 'orders'), (snap) => {
                state.trackedOrders = snap.docs.map(d => ({ id: d.id, ...d.data() }))
                    .filter(o => o.recipientPhone === phone)
                    .sort((a,b) => (b.createdAt?.toDate()||0) - (a.createdAt?.toDate()||0));
                render();
            });
        };

        function renderLogin() {
            return `<div class="min-h-[80vh] flex items-center justify-center p-6"><div class="bg-white p-12 rounded-[3rem] shadow-2xl max-w-sm w-full border border-slate-100"><h2 class="text-3xl font-extrabold mb-8 text-center">Secure Login</h2><input type="password" id="pin" placeholder="••••" class="w-full p-6 bg-slate-50 rounded-2xl text-center text-3xl font-black mb-6 tracking-[1em] outline-none"><button onclick="adminLogin()" class="w-full py-5 bg-slate-900 text-white rounded-2xl font-extrabold">AUTHENTICATE</button></div></div>`;
        }

        window.adminLogin = () => {
            if (document.getElementById('pin').value === ADMIN_PIN) {
                state.isAdmin = true;
                router.navigate('admin');
                onSnapshot(collection(db, 'artifacts', appId, 'public', 'data', 'orders'), (snap) => {
                    state.orders = snap.docs.map(d => ({ id: d.id, ...d.data() })).sort((a,b) => (b.createdAt?.toDate()||0) - (a.createdAt?.toDate()||0));
                    if (state.view === 'admin') render();
                });
            } else alert("Invalid PIN");
        };

        function renderAdmin() {
            if (!state.isAdmin) return renderLogin();
            const filtered = state.adminTab === 'manual' ? state.orders.filter(o => o.method === 'momo') : state.orders.filter(o => o.method !== 'momo');
            
            return `
                <div class="bg-slate-50 min-h-screen">
                    <nav class="bg-white border-b sticky top-0 z-50 p-6 flex justify-between items-center">
                        <span class="font-extrabold text-xl text-blue-600">ADMIN VAULT</span>
                        <div class="flex gap-2">
                            <button onclick="state.adminTab='orders';render()" class="px-5 py-2 rounded-xl text-xs font-black uppercase ${state.adminTab==='orders'?'bg-blue-600 text-white':'bg-slate-100'} tracking-widest">Auto</button>
                            <button onclick="state.adminTab='manual';render()" class="px-5 py-2 rounded-xl text-xs font-black uppercase ${state.adminTab==='manual'?'bg-amber-600 text-white':'bg-slate-100'} tracking-widest">MoMo</button>
                            <button onclick="state.adminTab='stock';render()" class="px-5 py-2 rounded-xl text-xs font-black uppercase ${state.adminTab==='stock'?'bg-blue-600 text-white':'bg-slate-100'} tracking-widest">Stock</button>
                            <button onclick="state.adminTab='config';render()" class="px-5 py-2 rounded-xl text-xs font-black uppercase ${state.adminTab==='config'?'bg-blue-600 text-white':'bg-slate-100'} tracking-widest">Config</button>
                        </div>
                    </nav>
                    <main class="max-w-4xl mx-auto p-6">
                        ${state.adminTab === 'config' ? `
                            <div class="space-y-6">
                                <div class="bg-white p-10 rounded-[2.5rem] shadow-xl">
                                    <h3 class="font-extrabold text-2xl mb-6 tracking-tight">Announcement Center</h3>
                                    <input id="ann_txt" value="${state.announcement?.text||''}" placeholder="e.g. MTN is stable" class="w-full p-6 bg-slate-50 rounded-2xl mb-4 font-bold">
                                    <div class="flex items-center gap-3 mb-6 font-bold text-xs"><input type="checkbox" id="ann_act" ${state.announcement?.active?'checked':''}> SHOW ON LIVE SITE</div>
                                    <button onclick="saveAnn()" class="w-full py-5 bg-slate-900 text-white rounded-2xl font-black">UPDATE LIVE BAR</button>
                                </div>
                                <div class="bg-white p-10 rounded-[2.5rem] shadow-xl">
                                    <h3 class="font-extrabold text-2xl mb-6 tracking-tight">Merchant API</h3>
                                    <input id="pay_key" value="${state.settings.paystackPublicKey||''}" placeholder="pk_live_..." class="w-full p-6 bg-slate-50 rounded-2xl mb-4 font-mono text-xs">
                                    <button onclick="saveS()" class="w-full py-5 bg-blue-600 text-white rounded-2xl font-black">SAVE KEYS</button>
                                </div>
                            </div>
                        ` : ''}
                        
                        ${state.adminTab === 'stock' ? `
                            <div class="bg-white p-10 rounded-[2.5rem] shadow-xl">
                                <h3 class="font-extrabold text-2xl mb-8">Add New Product</h3>
                                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-10">
                                    <select id="pn" class="p-4 bg-slate-50 rounded-xl font-black"><option>MTN</option><option>Telecel</option><option>AT</option></select>
                                    <input id="ps" placeholder="10GB" class="p-4 bg-slate-50 rounded-xl font-black">
                                    <input id="pp" type="number" placeholder="0.00" class="p-4 bg-slate-50 rounded-xl font-black">
                                    <button onclick="addP()" class="bg-blue-600 text-white rounded-xl font-black">ADD</button>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    ${state.products.map(p => `<div class="p-5 border rounded-2xl flex justify-between items-center"><div class="font-bold">${p.network} ${p.size} - GHS ${p.price}</div><button onclick="delP('${p.id}')" class="text-red-400">Delete</button></div>`).join('')}
                                </div>
                            </div>
                        ` : ''}

                        ${state.adminTab === 'orders' || state.adminTab === 'manual' ? `
                            <div class="space-y-4">
                                ${filtered.map(o => `
                                    <div class="bg-white p-8 rounded-[2.5rem] shadow-sm border border-slate-100 flex flex-col md:flex-row justify-between gap-6">
                                        <div>
                                            <div class="text-[10px] font-black text-slate-300 uppercase tracking-[0.2em] mb-2">${o.createdAt ? new Date(o.createdAt?.toDate()).toLocaleString() : 'Just now'}</div>
                                            <div class="text-4xl font-black text-slate-800 tracking-tighter">${o.recipientPhone}</div>
                                            <div class="text-lg font-bold text-blue-600 mt-1">${o.network} ${o.bundleSize}</div>
                                            ${o.method === 'momo' ? `<div class="mt-4 p-4 bg-amber-50 rounded-xl text-xs font-black uppercase text-amber-800">Sender: ${o.senderName} | ID: ${o.transId}</div>` : ''}
                                        </div>
                                        <div class="flex items-center gap-4">
                                            <select onchange="updO('${o.id}', this.value)" class="p-4 bg-slate-50 rounded-2xl font-black text-xs">
                                                <option value="pending" ${o.status==='pending'?'selected':''}>PENDING</option>
                                                <option value="delivered" ${o.status==='delivered'?'selected':''}>DELIVERED</option>
                                                <option value="failed" ${o.status==='failed'?'selected':''}>FAILED</option>
                                            </select>
                                            <button onclick="delO('${o.id}')" class="text-red-300">Delete</button>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}
                    </main>
                </div>`;
        }

        window.saveAnn = async () => {
            const text = document.getElementById('ann_txt').value;
            const active = document.getElementById('ann_act').checked;
            await setDoc(doc(db, 'artifacts', appId, 'public', 'data', 'config', 'announcement'), { text, active });
            alert("Live!");
        };

        window.saveS = async () => {
            const key = document.getElementById('pay_key').value;
            await setDoc(doc(db, 'artifacts', appId, 'public', 'data', 'config', 'settings_doc'), { paystackPublicKey: key });
            alert("Saved!");
        };

        window.addP = async () => {
            const size = document.getElementById('ps').value;
            const price = document.getElementById('pp').value;
            if(!size || !price) return;
            await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'products'), { network: document.getElementById('pn').value, size, price, createdAt: serverTimestamp() });
            document.getElementById('ps').value = ''; document.getElementById('pp').value = '';
        };

        window.updO = async (id, status) => { await updateDoc(doc(db, 'artifacts', appId, 'public', 'data', 'orders', id), { status }); };
        window.delO = async (id) => { if(confirm("Delete order?")) await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'orders', id)); };
        window.delP = async (id) => { if(confirm("Delete product?")) await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'products', id)); };

        init();
    </script>
</body>
</html>


